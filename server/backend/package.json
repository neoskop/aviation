    "@types/mongoose": "4.7.13",
    "@types/passport": "0.3.3",
    "@types/passport-http-bearer": "1.0.30",
    "@types/socket.io": "1.4.29",
    "@types/ws": "3.0.0",
    "apidoc": "0.17.6",
    "chai": "4.0.2",
    "chai-http": "^4.2.0",
    "concurrently": "3.4.0",
